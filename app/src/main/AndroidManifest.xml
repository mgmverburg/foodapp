<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.pharmit.foodapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"></activity>
        <activity
            android:name=".LoginRegistrationActivity"
            android:label="@string/title_activity_login_registration">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GroupPage"
            android:label="@string/title_activity_group"></activity>
        <activity
            android:name=".PollPage"></activity>
        <activity
            android:name=".FoodTypeActivity"
            android:label="@string/title_activity_food_type"></activity>
        <activity
            android:name=".CreatePollActivity"
            android:label="@string/title_activity_create_poll"></activity>
        <activity
            android:name=".PollActivity"
            android:label="@string/title_activity_poll"></activity>
        <activity android:name=".FavoritePollActivity"
            android:label="Favorite polls"></activity>
        <activity android:name=".NewFavoritePollActivity"
            android:label="Favorite poll edit"></activity>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>