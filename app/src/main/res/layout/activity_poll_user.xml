<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nl.pharmit.foodapp.PollActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first"
        android:layout_below="@+id/toggleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="First choice:"
            android:id="@+id/textViewFirst"
            android:layout_gravity="center"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerFirst"
            android:layout_centerVertical="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/first"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Second choice:"
            android:id="@+id/textViewSecond"
            android:layout_gravity="center"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerSecond"
            android:layout_centerVertical="true" />

    </LinearLayout>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="No Preference"
        android:textOn="No Preference"
        android:id="@+id/nopreference"
        android:background="@drawable/toggle_selector"
        android:textColor="@drawable/toggle_text_color"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_below="@+id/countdown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Not joining"
        android:textOn="Not joining"
        android:id="@+id/notjoining"
        android:background="@drawable/toggle_selector"
        android:textColor="@drawable/toggle_text_color"
        android:layout_below="@+id/countdown"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time left: --:--:--"
        android:id="@+id/countdown"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:background="@drawable/background"
        android:layout_alignTop="@+id/toggleButton"
        android:layout_alignLeft="@+id/first"
        android:layout_alignStart="@+id/first" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Poll"
        android:textOff="Poll"
        android:textColor="#ffffff"
        android:id="@+id/toggleButton2"
        android:background="@drawable/tab_style"
        android:layout_above="@+id/countdown"
        android:layout_alignLeft="@+id/notjoining"
        android:layout_alignStart="@+id/notjoining"
        android:layout_marginBottom="190dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton"
        android:textOn="Group"
        android:textOff="Group"
        android:background="@drawable/tab_style"
        android:textColor="#ffffff"
        android:checked="false"
        android:layout_alignBottom="@+id/toggleButton2"
        android:layout_alignLeft="@+id/nopreference"
        android:layout_alignStart="@+id/nopreference" />


    <!--<TextView-->





</RelativeLayout>
