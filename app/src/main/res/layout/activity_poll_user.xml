<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nl.pharmit.foodapp.PollActivity"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background" >


        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton2"
            android:layout_weight="0.5"
            android:textOn="Group"
            android:textOff="Group"
            android:background="@drawable/tab_style"
            android:textColor="#ffffff" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Poll"
            android:textOff="Poll"
            android:textColor="#ffffff"
            android:id="@+id/toggleButton"
            android:layout_weight="0.5"
            android:background="@drawable/tab_style"/>
    </LinearLayout>



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/imageView2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pollVoteTitle"
            android:id="@+id/voteTitle"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first"
            android:layout_marginTop="@dimen/item_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/firstChoice"
                android:layout_centerVertical="true"
                android:id="@+id/textViewFirst"/>

            <Spinner
                android:layout_width="wrap_content"
                android:minWidth="@dimen/spinner_min_width"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerFirst"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_marginTop="@dimen/item_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/secondChoice"
                android:layout_centerVertical="true"
                android:id="@+id/textViewSecond" />

            <Spinner
                android:layout_width="wrap_content"
                android:minWidth="@dimen/spinner_min_width"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerSecond"
                android:layout_alignParentRight="true" />

        </RelativeLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/item_margin">

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="No Preference"
                android:textOn="No Preference"
                android:id="@+id/nopreference"
                android:layout_marginRight="10dp"
                android:background="@drawable/toggle_selector"
                android:textColor="@drawable/toggle_text_color"
                />
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Not joining"
                android:textOn="Not joining"
                android:id="@+id/notjoining"
                android:layout_marginLeft="10dp"
                android:background="@drawable/toggle_selector"
                android:textColor="@drawable/toggle_text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/item_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deadlinePollVote"
                android:id="@+id/deadlineText"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emptyTime"
                android:id="@+id/currentDeadlineTime"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>




    <!--<TextView-->





</RelativeLayout>